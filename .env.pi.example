APP_ENV=prod
PRINT_BACKEND=escpos        # use ESC/POS on Pi
DATABASE_URL=sqlite:////var/lib/todotickets/tickets.db
ARCHIVE_DIR=/var/lib/todotickets/archives
OUTPUT_DIR=/var/lib/todotickets/out

# ESC/POS connection (choose one)
ESCPOS_CONNECTION=network
ESCPOS_HOST=192.168.1.50
ESCPOS_PORT=9100

# OR for USB
# ESCPOS_CONNECTION=usb
# ESCPOS_VENDOR_ID=0x0416
# ESCPOS_PRODUCT_ID=0x5011

# OR for serial
# ESCPOS_CONNECTION=serial
# ESCPOS_DEVICE=/dev/ttyUSB0
# ESCPOS_BAUDRATE=19200